{
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "auto-imports.d.ts",
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"],
    }
  }
}